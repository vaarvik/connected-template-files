{
    "name": "connected-template-files",
    "displayName": "Connected Template Files",
    "description": "Create multiple connected files easy",
    "publisher": "vaarvik",
    "version": "1.0.1",
    "icon": "images/icon.png",
    "repository": {
        "url": "https://github.com/vaarvik/connected-template-files"
    },
    "engines": {
        "vscode": "^1.84.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "connected-template-files.createComponent",
                "title": "Create Component"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "when": "resourceScheme == file",
                    "command": "connected-template-files.createComponent"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.3",
        "@types/node": "18.x",
        "@types/sinon": "^17.0.2",
        "@types/vscode": "^1.84.0",
        "@typescript-eslint/eslint-plugin": "^6.9.0",
        "@typescript-eslint/parser": "^6.9.0",
        "@vscode/test-electron": "^2.3.6",
        "eslint": "^8.52.0",
        "glob": "^10.3.10",
        "mocha": "^10.2.0",
        "sinon": "^17.0.1",
        "ts-loader": "^9.5.0",
        "typescript": "^5.2.2",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "clipboardy": "^4.0.0"
    }
}
